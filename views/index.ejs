<section class="header__banner-container">
    <div class="header__banner">
        <div class="header__content">
            <p class="header__welcome">Witaj na moim blogu!</p>
            <!-- <h1 class="header__intro">Nazywam się Kaśka i podróżuje solo po świecie</h1> -->
            <div class="header__motivation">

                <div class="header__motivation-quote-container">
                    <p class="header__motivation-quote">"Najważniejsze w życiu jest nie to, co posiadamy,
                        lecz
                        kogo
                        spotykamy."
                    </p>
                    <p class="motivation__quote-author">J. M. Lawrence</p>
                </div>
            </div>

        </div>

    </div>
</section>
<div class="app-wrapper">

    <section class="section" id="section--1">
        <div class="articles">
            <div class="articles__posts-container">
                <div class="articles__latest-posts">
                    <h2 class="articles__latest-posts-heading heading">
                        <span class="heading__bar"></span>
                        <span class="heading-text">Ostatnio
                        dodane</span>
                        <span class="heading__bar"></span></h2>
                    <!-- ///// Test slider -->
                    <div class="articles__slider-container">

                        <div class="articles__slider">

                            <div class="articles__slider-wrapper ">
                                <% if(postsLatest != '') { %>
                                <% postsLatest.forEach((post,i)=>{  %>
                                <div class="articles__slide post">
                                    <a class ="article__link" href="/post/<%= post._id%>">
                                    <div class="post__img articles__slide-img--0 " style="background-image: url('<%- post.image%>')">
                                  
                                        
                                    </div>
                                    
                                    <div class="post__text">
                                        <p class="post__title"><%- post.title %>
                                        </p>
                                        
                                        

                                    </div>
                                    <div class="post-data__container">
                                        <p class="post__data">
                                            <%- post.data.toLocaleString()%>
                                            
                                        </p>
                                        <p class="post__likes"><span class="likes-count"><%- post.likes%></span><i class="fa-solid fa-heart"></i></p>
                                      </div>
                                </a>
                                </div>
                                <% }) %>
                                <% } %>

                            </div>


                            <button class="btn__slide--left btn__slide"><span class="btn-text"><i
                                class="fa-solid fa-circle-arrow-left"></i></span>
                                <!-- <i class="fas fa-chevron-left"></i> -->
                            </button>
                            <button class="btn__slide--right btn__slide"><span  class="btn-text"><i
                                class="fa-solid fa-circle-arrow-right"></i></span>
                                <!-- <i class="fas fa-chevron-right"></i> -->
                            </button>

                            <div class="articles__slider-dots-container">
                                <span class="articles__slider-dot slider__dot--active" ></span><span class="articles__slider-dot"></span><span class="articles__slider-dot"></span><span class="articles__slider-dot"></span>
                            </div>

                        </div>





                    </div>



                    <div class="articles__featured-posts-container">
                        <h2 class="articles__featured-posts-heading heading">
                            <span class="heading__bar"></span><span class="heading-text"><span class="heading-text">Polecane wpisy</span></span>
                            <span class="heading__bar"></span>
                        </h2>
                        <% if(postsFeatured != '') { %>
                        <% postsFeatured.forEach((post,i)=>{  %>
                        <div class="post articles__featured-post">
                            <a class ="article__link" href="/post/<%= post._id %>">
                            <div class="post__img articles__slide-img--0" style="background-image:  url('<%- post.image%>')">
                                
                            </div>
                            
                            <div class="post__text">
                                <p class="post__title"><%- post.title %>
                                </p>

                            </div>
                            <div class="post-data__container">
                                <p class="post__data">
                                    <%- post.data.toLocaleString()%>
                                    
                                </p>
                                <p class="post__likes"><span class="likes-count"><%- post.likes%></span><i class="fa-solid fa-heart"></i></p>
                              </div>
                        </a>
                        </div>
                        <% }) %>
                        <% } %>

                        <a href="/posts" class="btn articles__featured--btn">Więcej artykułów</a>
                    </div>
                </div>

            </div>
            <aside class="aside" id="section--4">
                <!-- test -->

                <p class="aside__about-heading heading">
                    <span class="heading__bar"></span><span class="heading-text">O mnie</span><span class="heading__bar"></span>
