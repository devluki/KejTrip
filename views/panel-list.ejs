<section class="header__banner-container">

    <div class="header__banner" style="height:100vh ;">

        <div class="header__panel" style="max-height: 90vh; max-width:1140px; width:70%; height: 80%; ">
            <div class="panel">
                <p class="articles__latest-posts-heading heading">
                    <span class="heading__bar"></span>
                    <span class="heading-text">Panel admina</span>
                    <span class="heading__bar"></span></p>
                <a href="/admin-panel" class="menu__link btn">Wróć do panelu</a>
                <ul class="articles__list">



                    <!--  -->
                    <% if(posts != '') { %>
                    <% posts.forEach((post,i)=>{  %>

                    <li class="list-element">
                        <span class="post__title">Tytuł: <%- post.title %></span><a href="/post/edit/<%= post._id%>" class="list__article">Edytuj</a>
                        <form action="/post/delete/<%= post.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-delete">Usuń post</button>
                        </form>
                    </li>



                    <% }) %>
                    <% } %>
                    <!-- <li class="list-element"><a href="" class="list__article"></a></li> -->
                </ul>

                <!--  -->
            </div>

        </div>
    </div>
</section>